{% extends 'base.html.twig' %}

{% block title %}Ticket #{{ ticket.ticket_id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Your Ticket</h1>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.ticket_code) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.seat_number) }}
                </div>
            </div>
            {{ form_end(form) }}
            
            <div class="mt-3">
                <a href="{{ path('app_ticket_download', {'id': ticket.ticket_id}) }}" class="btn btn-primary">
                    Download Ticket
                </a>
                <a href="{{ path('app_user_tickets') }}" class="btn btn-secondary">
                    Back to My Tickets
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}