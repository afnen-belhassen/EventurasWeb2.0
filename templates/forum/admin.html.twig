          </div>
        </footer>
        
    </div>
    {% endblock %}

    {% block js %}
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> {# :contentReference[oaicite:0]{index=0} #}
      <script src="{{ asset('js/core/jquery-3.7.1.min.js') }}"></script>
      <script src="{{ asset('js/core/popper.min.js') }}"></script>
