      <script src="{{ asset('js/plugin/datatables/datatables.min.js') }}"></script>
      <script src="{{ asset('js/plugin/bootstrap-notify/bootstrap-notify.min.js') }}"></script>
      <script src="{{ asset('js/plugin/jsvectormap/jsvectormap.min.js') }}"></script>
      <script src="{{ asset('js/plugin/jsvectormap/world.js') }}"></script>
      <script src="{{ asset('js/plugin/sweetalert/sweetalert.min.js') }}"></script>
      <script src="{{ asset('js/setting-demo.js') }}"></script>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          // Récupère les données passées par le contrôleur
          const labels        = {{ chart_labels|json_encode|raw }};
          const postData      = {{ chart_post_data|json_encode|raw }};
          const commentData   = {{ chart_comment_data|json_encode|raw }};
          console.log('postData:', postData, postData.map(x=>typeof x));
        console.log('commentData:', commentData, commentData.map(x=>typeof x));
      
          console.log(document.getElementById('statisticsChart'));
          const ctx = document.getElementById('statisticsChart').getContext('2d');
          new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [
            {
              label: 'Posts',
              data: postData.map(x => +x),
              backgroundColor: 'rgba(54,162,235,0.5)',
              borderColor: 'rgba(54,162,235,1)',
              borderWidth: 1
            },
            {
              label: 'Comments',
              data: commentData.map(x => +x),
              backgroundColor: 'rgba(255,99,132,0.5)',
              borderColor: 'rgba(255,99,132,1)',
              borderWidth: 1
            }
          ]
        },
        options: {
          scales: {
            y: {                              // ← définition de l’axe Y
              type: 'linear',                // optionnel, c’est la valeur par défaut
              min: 0,                        // force le minimum à 0
              max: Math.max(...postData, ...commentData), // force le maximum
              beginAtZero: true,             // commence bien à zéro :contentReference[oaicite:0]{index=0}
              ticks: {
                stepSize: 1,                 // un pas de 1 entre chaque graduation :contentReference[oaicite:1]{index=1}
                precision: 0,                // aucune décimale
                callback: v => Number.isInteger(v) ? v : ''  
              }
            },
            x: {                             // tu peux aussi configurer l’axe X si besoin
              // barPercentage, categoryPercentage, etc.
            }
          }
        }
      });
      
        
        });
      
        </script>
        <script>
          // données pour bad-words
          const bwLabels = {{ chart_bw_labels|json_encode|raw }};
          const bwData   = {{ chart_bw_data|json_encode|raw }};
      
          const ctxBW = document.getElementById('bwAttemptsChart').getContext('2d');
          new Chart(ctxBW, {
            type: 'pie',    // ← camembert au lieu de 'bar'
            data: {
              labels: bwLabels,
              datasets: [{
                label: 'Tentatives',
                data: bwData.map(x => +x),
                // borderWidth et couleurs peuvent rester ou être retirés
                borderWidth: 1
              }]
            },
            options: {
              responsive: true,
              plugins: {
                tooltip: {
                  callbacks: {
                    label: context => `${context.label}: ${context.parsed} tentative(s)`
                  }
                }
              }
            }
          });
        </script>
    {% endblock %}
    
