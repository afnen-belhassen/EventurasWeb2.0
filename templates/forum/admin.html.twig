      <script src="{{ asset('js/kaiadmin.min.js') }}"></script>
      <script src="{{ asset('js/setting-demo.js') }}"></script>
      <script src="{{ asset('js/demo.js') }}"></script>
    {% endblock %}
  </body>
</html>