{% extends 'base.html.twig' %}

{% block title %}Partners{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Partners</h1>
            <a href="{{ path('app_partner_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Partner
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Website</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for partner in partners %}
                                <tr>
                                    <td>{{ partner.name }}</td>
                                    <td>{{ partner.description }}</td>
                                    <td>
                                        {% if partner.website %}
                                            <a href="{{ partner.website }}" target="_blank">{{ partner.website }}</a>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_partner_show', {'id': partner.id}) }}" class="btn btn-info btn-sm me-2">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a href="{{ path('app_partner_generate_contract', {'id': partner.id}) }}" class="btn btn-success btn-sm me-2">
                                                <i class="fas fa-file-contract"></i> Generate Contract
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">No partners found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 