{% extends 'base.html.twig' %}

{% block title %}New Partnership{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-primary text-white shadow-lg">
                <div class="card-header">
                    <h1 class="h3 mb-0"><i class="fas fa-handshake me-2"></i>Create New Partnership</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.name, 'Company Name', {'label_attr': {'class': 'form-label text-light'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label text-light'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label text-light'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.phone, 'Phone Number', {'label_attr': {'class': 'form-label text-light'}}) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.phone, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.address, 'Address', {'label_attr': {'class': 'form-label text-light'}}) }}
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.address, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-light">
                                <i class="fas fa-save me-2"></i>Create Partnership
                            </button>
                            <a href="{{ path('app_partnership_index') }}" class="btn btn-warning">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 