            </a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table partnership-list">
                        <thead>
                            <tr>
                                <th>Partenaire</th>
                                <th>Image</th>
                                <th>Type</th>
                                <th>Statut</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for partnership in partnerships %}
                                <tr>
                                    <td>{{ partnership.partnerId ? partnership.partnerId.name : 'N/A' }}</td>
                                    <td>
                                        {% if partnership.signedContractFile %}
                                            <img src="{{ asset('uploads/organizer/contracts/' ~ partnership.signedContractFile) }}" alt="Image du partenariat" class="partnership-image">
                                        {% else %}
                                            <span class="text-muted">Aucune image</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ partnership.contracttype }}</td>
                                    <td>
                                        <span class="badge {% if partnership.status == 'active' %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ partnership.status }}
                                        </span>
                                    </td>
                                    <td>{{ partnership.createdAt|date('d/m/Y') }}</td>
                                    <td>
                                        <div class="button-group">
                                            <a href="{{ path('app_partnership_show', {'id': partnership.id}) }}" class="btn btn-info">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('app_partnership_edit', {'id': partnership.id}) }}" class="btn btn-warning">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
