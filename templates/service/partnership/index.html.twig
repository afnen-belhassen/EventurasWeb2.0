{% extends 'base.html.twig' %}

{% block title %}Partnerships{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="card bg-primary text-white shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0"><i class="fas fa-handshake me-2"></i>Partnerships</h1>
            <a href="{{ path('app_partnership_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Partner</th>
                            <th>Image</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for partnership in partnerships %}
                        <tr>
                            <td>{{ partnership.partnerName }}</td>
                            <td>
                                {% if partnership.partnerId and partnership.partnerId.imagePath %}
                                    <img src="{{ asset('uploads/partners/' ~ partnership.partnerId.imagePath) }}" 
                                         alt="{{ partnership.partnerName }}" 
                                         class="img-thumbnail" 
                                         style="max-width: 50px;">
                                {% else %}
                                    <i class="fas fa-image text-muted"></i>
                                {% endif %}
                            </td>
                            <td>{{ partnership.type }}</td>
                            <td>
                                <span class="badge bg-{{ partnership.status == 'pending' ? 'warning' : 'success' }}">
                                    {{ partnership.status }}
                                </span>
                            </td>
                            <td>{{ partnership.createdAt|date('Y-m-d') }}</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_partnership_show', {'id': partnership.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_partnership_edit', {'id': partnership.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('app_partnership_delete', {'id': partnership.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this partnership?');" 
                                          style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partnership.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No partnerships found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 