{% extends 'base.html.twig' %}

{% block title %}Créer votre événement{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .event-form {
            background-color: #f8f9fa; /* Light background for the form */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .event-form h2 {
            color: #343a40; /* Dark color for the heading */
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-custom {
            background-color: #007bff; /* Primary color */
            color: white;
        }
        .btn-custom:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }
        .form-error {
            color: red;
            font-size: 0.9em;
            margin-bottom: 5px; /* Add some space below the error message */
        }
    </style>
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                Eventura
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-lg-center ms-auto me-lg-5">
                    <li class="nav-item">
                        <a class="nav-link click-scroll" href="#section_1">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link click-scroll" href="#section_2">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link click-scroll" href="#section_3">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link click-scroll" href="#section_4">Contact</a>
                    </li>
                </ul>

                <div class="d-flex gap-2">
                    <a href="{{ path('app_event_new') }}" class="btn custom-btn d-lg-block d-none">
                        <i class="bi bi-plus-circle me-2"></i>Créer Événement 
                    </a>
                    <a href="{{ path('app_show_all_events') }}"class="btn custom-btn d-lg-block d-none">Vos événements</a>
                    <a href="{{ path('app_login') }}"class="btn custom-btn d-lg-block d-none">Connexion</a>

                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="event-form">
            <h2>Créer votre événement</h2>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {% if form.title.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.title.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.description.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.description.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.date_event.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.date_event.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.date_event, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.location.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.location.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.location, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.category.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.category.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.image.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.image.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.activities.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.activities.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.activities, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.prix.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.prix.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {% if form.nb_places.vars.errors|length > 0 %}
                        <div class="form-error">
                            {{ form.nb_places.vars.errors|first.message }}  {# Access the message property #}
                        </div>
                    {% endif %}
                    {{ form_row(form.nb_places, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-custom">Créer l'événement</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}