{% extends 'base_front.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <style>
       

        .register-container {
            max-width: 900px;
            margin: 100px auto;
            padding: 40px;
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 36px;
            color: #333;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .form-control, .form-select {
            padding: 15px;
            font-size: 16px;
            border-radius: 10px;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #4d94ff;
            box-shadow: 0 0 10px rgba(0, 0, 255, 0.3);
        }

        .btn-primary {
            background-color: #4d94ff;
            color: white;
            padding: 15px 30px;
            font-size: 18px;
            border-radius: 12px;
            border: none;
            width: 100%;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #337ab7;
        }

        .form-row {
            margin-bottom: 30px;
        }

        .form-label {
            font-size: 18px;
            font-weight: 600;
            color: #555;
        }

        .text-center {
            font-size: 16px;
            color: #555;
        }

        .text-decoration-none {
            color: #4d94ff;
        }

        .text-decoration-none:hover {
            text-decoration: underline;
        }
    </style>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="register-container">
                    <h1 class="text-center mb-4">Inscription</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'row g-3', 'enctype': 'multipart/form-data'}}) }}

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userUsername, {'label': 'Username', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userEmail, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userFirstname, {'label': 'Prénom', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userLastname, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userBirthday, {'label': 'Date de naissance', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userGender, {'label': 'Sexe', 'attr': {'class': 'form-select'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userPicture, {'label': 'Photo de profil', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userPhonenumber, {'label': 'Numéro de téléphone', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.userLevel, {'label': 'Niveau', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
