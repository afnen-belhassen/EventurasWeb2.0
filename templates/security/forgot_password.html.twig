{% extends 'base_front.html.twig' %}

{% block body %}
    <style>
        .login-container {
            max-width: 800px;
            margin: 80px auto;
            padding: 50px;
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 36px;
            color: #333;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .form-label {
            font-size: 18px;
            color: #444;
            margin-bottom: 10px;
        }

        .form-control {
            padding: 20px;
            font-size: 18px;
            border-radius: 12px;
            border: 1px solid #ddd;
            width: 100%;
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #4d94ff;
            box-shadow: 0 0 10px rgba(0, 0, 255, 0.3);
        }

        .btn-primary {
            background-color: #4d94ff;
            color: white;
            padding: 20px;
            border: none;
            border-radius: 12px;
            font-size: 20px;
            width: 100%;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #337ab7;
        }

        .text-center {
            font-size: 18px;
            color: #555;
        }

        .text-decoration-none {
            color: #4d94ff;
        }

        .text-decoration-none:hover {
            text-decoration: underline;
        }

        .mt-3 {
            margin-top: 30px;
        }

        .alert {
            font-size: 18px;
            margin-bottom: 20px;
        }
    </style>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="login-container">
                    <h2 class="text-center">Mot de passe oublié</h2>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    <form method="post" action="{{ path('app_forgot_password') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label">Adresse email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Entrez votre adresse email" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Envoyer le lien de réinitialisation</button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Vous avez retrouvé votre mot de passe ? 
                            <a href="{{ path('app_login') }}" class="text-decoration-none">Connectez-vous ici</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
