{% extends 'base.html.twig' %}

{% block title %}Reservation Confirmée{% endblock %}

{% block body %}
<style>
body {
    background-color: #0d064ffd;
    animation: backgroundAnimation 10s infinite alternate;
    margin: 0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
}

@keyframes backgroundAnimation {
    0% {
        background-color: #0d064ffd;
    }
    100% {
        background-color: #190d6b;
    }
}

.container {
    width: 100%;
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
}

.page-title {
    color: white;
    text-align: center;
    margin-bottom: 30px;
    font-size: 28px;
    font-weight: bold;
    font-family: 'Poppins', sans-serif;
}

.success-message {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    padding: 20px;
    text-align: center;
    color: white;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.success-icon {
    font-size: 48px;
    color: #4ade80;
    margin-bottom: 15px;
}

.ticket-wrapper {
    position: relative;
    margin-bottom: 30px;
}

.ticket {
    background-color: #f9e9d6;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
    display: flex;
    min-height: 200px;
}

.ticket:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 20px;
    background: repeating-linear-gradient(
        45deg,
        #0045ad,
        #0045ad 10px,
        #f9e9d6 10px,
        #f9e9d6 20px
    );
}

.ticket-main {
    flex: 1;
    padding-left: 15px;
    border-right: 1px dashed #000;
    position: relative;
}

.ticket-main:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 1px;
    background-color: #000;
}

.ticket-stub {
    width: 200px;
    padding-left: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.seat-info {
    display: flex;
    margin: 20px 0;
}

.seat-label {
    width: 200px;
    padding: 10px;
    border: 1px solid #000;
}

.seat-value {
    flex: 1;
    padding: 10px;
    border: 1px solid #000;
    border-left: none;
}

.assignee-info {
    display: flex;
    margin: 20px 0;
}

.assignee-label {
    width: 200px;
    padding: 10px;
    border: 1px solid #000;
}

.assignee-value {
    flex: 1;
    padding: 10px;
    border: 1px solid #000;
    border-left: none;
}

.tarif {
    margin: 20px 0;
}

.blue-box {
    background-color: #0045ad;
    color: white;
    padding: 10px;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
}

.red-flags {
    color: #ff0000;
    margin-right: 10px;
}

.tarif-label {
    background-color: #f9e9d6;
    color: #000;
    border: 1px solid #000;
    padding: 10px;
    text-align: center;
}

.registered-box {
    background-color: #0045ad;
    color: white;
    padding: 15px;
    text-align: center;
    margin-bottom: 20px;
}

.ticket-details {
    margin-top: 20px;
}

.ticket-bar {
    position: absolute;
    top: 0;
    left: 0;
    width: 40px;
    height: 100%;
}

.ticket-bar-black {
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 100%;
    background-color: #000;
}

.ticket-bar-blue {
    position: absolute;
    top: 0;
    left: 20px;
    width: 20px;
    height: 100%;
    background: repeating-linear-gradient(
        45deg,
        #0045ad,
        #0045ad 10px,
        #f9e9d6 10px,
        #f9e9d6 20px
    );
}

.ticket-line {
    width: 100%;
    height: 1px;
    background-color: #0045ad;
    margin: 20px 0;
}

.eventura-logo {
    text-align: right;
    font-weight: bold;
    margin-top: 20px;
    font-size: 20px;
}

.ticket-notice {
    text-align: right;
    font-size: 12px;
    margin-top: 5px;
}

.ticket-code {
    font-family: monospace;
    font-size: 14px;
    padding: 5px;
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 3px;
    margin-bottom: 5px;
}

.action-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
}

.btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-family: 'Poppins', sans-serif;
}

.btn-primary {
    background-color: rgb(240, 228, 61);
    color: #333;
}

.btn-secondary {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
    backdrop-filter: blur(5px);
}

.btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

@media (max-width: 768px) {
    .ticket {
        flex-direction: column;
    }
    
    .ticket-main {
        border-right: none;
        border-bottom: 1px dashed #000;
        padding-bottom: 20px;
    }
    
    .ticket-stub {
        width: 100%;
        padding-left: 0;
        padding-top: 20px;
    }
    
    .action-buttons {
        flex-direction: column;
        gap: 10px;
    }
    
    .btn {
        width: 100%;
        text-align: center;
    }
}
</style>

<div class="container">
    <h1 class="page-title">Réservation Confirmée</h1>
    
    <div class="success-message">
        <div class="success-icon">✓</div>
        <h2>Votre paiement a été effectué avec succès!</h2>
        <p>Votre réservation a été confirmée et votre billet est prêt.</p>
    </div>
    
    <div class="ticket-wrapper">
        <div class="ticket">
            <div class="ticket-bar">
                <div class="ticket-bar-black"></div>
                <div class="ticket-bar-blue"></div>
            </div>
            
            <div class="ticket-main">
                <div class="ticket-line"></div>
                <div class="event-title" style="font-size:1.2rem;font-weight:bold;margin-bottom:10px;color:#0045ad;">{{ reservation.event.title }}</div>
                <div class="seat-info">
                    <div class="seat-label">Siège:</div>
                    <div class="seat-value">{{ reservation.ticket.seat_number }}</div>
                </div>
                
                <div class="assignee-info">
                    <div class="assignee-label">Assigné à:</div>
                    <div class="assignee-value">Utilisateur #{{ reservation.user_id }}</div>
                </div>
                
                <div class="tarif">
                    <div class="blue-box">
                        <span class="red-flags">▾ ▾ ▾ ▾ ▾</span>
                    </div>
                    <div class="tarif-label">
                        Simple billet - {{ reservation.event.prix }} TND
                    </div>
                </div>
            </div>
            
            <div class="ticket-stub">
                <div class="registered-box">
                    Enregistré
                </div>
                
                <div class="ticket-details">
                    <p><strong>Date:</strong> {{ reservation.event.date_event ? reservation.event.date_event|date('d/m/Y') : 'N/A' }}</p>
                    <p><strong>Heure:</strong> {{ reservation.event.date_event ? reservation.event.date_event|date('H:i') : 'N/A' }}</p>
                    <div class="ticket-code">
                        {{ reservation.ticket.ticket_code }}
                    </div>
                </div>
                
                <div class="eventura-logo">
                    ©eventura
                </div>
                <div class="ticket-notice">
                    Ce ticket doit être conservé.
                </div>
            </div>
        </div>
    </div>
    
    <div class="action-buttons">
        <a href="{{ path('app_reservations') }}" class="btn btn-primary">Voir mes tickets</a>
        <a href="{{ path('app_accepted_events') }}" class="btn btn-secondary">Explorer d'autres événements</a>
    </div>
</div>

{% endblock %}