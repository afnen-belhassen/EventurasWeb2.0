{% extends 'back/basePartner.html.twig' %}

{% block title %}Edit Partner{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Partner</h1>
            <a href="{{ path('app_partner_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.website, 'Website', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.website) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                                {% if partner.imagePath %}
                                    <div class="mb-2">
                                        <img src="{{ asset('uploads/partners/' ~ partner.imagePath) }}" alt="Current image" class="img-thumbnail" style="max-width: 200px;">
                                    </div>
                                {% endif %}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.imageFile) }}
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 