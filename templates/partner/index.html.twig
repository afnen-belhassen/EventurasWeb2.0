{% extends 'back/basePartner.html.twig' %}

{% block title %}Partners{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Partners</h1>
            <a href="{{ path('app_partner_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Partner
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Website</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for partner in partners %}
                                <tr>
                                    <td>
                                        {% if partner.imagePath %}
                                            <img src="{{ asset('uploads/partners/' ~ partner.imagePath) }}" alt="{{ partner.name }}" class="img-thumbnail" style="max-width: 100px;">
                                        {% else %}
                                            <div class="bg-light text-center p-2" style="width: 100px; height: 60px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>{{ partner.name }}</td>
                                    <td>{{ partner.description|striptags|slice(0, 100) }}{% if partner.description|length > 100 %}...{% endif %}</td>
                                    <td>
                                        {% if partner.website %}
                                            <a href="{{ partner.website }}" target="_blank">{{ partner.website }}</a>
                                        {% else %}
                                            <span class="text-muted">Not provided</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_partner_show', {'id': partner.id}) }}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a href="{{ path('app_partner_edit', {'id': partner.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form method="post" action="{{ path('app_partner_delete', {'id': partner.id}) }}" onsubmit="return confirm('Are you sure you want to delete this partner?');" style="display: inline-block;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partner.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">No partners found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 