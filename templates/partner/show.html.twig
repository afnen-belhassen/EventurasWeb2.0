{% extends 'base.html.twig' %}

{% block title %}Partner Details{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Partner Details</h1>
            <div>
                <a href="{{ path('app_partner_index') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_partner_edit', {'id': partner.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Partner Information</h5>
                    </div>
                    <div class="card-body">
                        {% if partner.imagePath %}
                            <div class="text-center mb-3">
                                <img src="{{ asset('uploads/partners/' ~ partner.imagePath) }}" alt="{{ partner.name }}" class="img-fluid rounded" style="max-height: 200px;">
                            </div>
                        {% else %}
                            <div class="text-center mb-3">
                                <div class="bg-light rounded p-4">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                    <p class="mt-2 text-muted">No image available</p>
                                </div>
                            </div>
                        {% endif %}

                        <h4 class="mb-3">{{ partner.name }}</h4>
                        
                        <div class="mb-3">
                            <h6 class="text-muted">Description</h6>
                            <p>{{ partner.description|nl2br }}</p>
                        </div>

                        <div class="mb-3">
                            <h6 class="text-muted">Contact Information</h6>
                            <ul class="list-unstyled">
                                {% if partner.email %}
                                    <li class="mb-2">
                                        <i class="fas fa-envelope me-2"></i> 
                                        <a href="mailto:{{ partner.email }}">{{ partner.email }}</a>
                                    </li>
                                {% endif %}
                                {% if partner.phone %}
                                    <li class="mb-2">
                                        <i class="fas fa-phone me-2"></i> 
                                        <a href="tel:{{ partner.phone }}">{{ partner.phone }}</a>
                                    </li>
                                {% endif %}
                                {% if partner.website %}
                                    <li class="mb-2">
                                        <i class="fas fa-globe me-2"></i> 
                                        <a href="{{ partner.website }}" target="_blank">{{ partner.website }}</a>
                                    </li>
                                {% endif %}
                                {% if partner.address %}
                                    <li class="mb-2">
                                        <i class="fas fa-map-marker-alt me-2"></i> 
                                        {{ partner.address }}
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Partner Media</h5>
                    </div>
                    <div class="card-body">
                        {% if partner.videoPath %}
                            <div class="mb-4">
                                <h6 class="mb-3">Video</h6>
                                {% if 'youtube.com' in partner.videoPath or 'youtu.be' in partner.videoPath %}
                                    {% set videoId = partner.videoPath|replace({'https://www.youtube.com/watch?v=': '', 'https://youtu.be/': ''}) %}
                                    <div class="ratio ratio-16x9">
                                        <iframe 
                                            src="https://www.youtube.com/embed/{{ videoId }}" 
                                            title="YouTube video player" 
                                            frameborder="0" 
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                            allowfullscreen>
                                        </iframe>
                                    </div>
                                {% elseif 'vimeo.com' in partner.videoPath %}
                                    {% set videoId = partner.videoPath|replace({'https://vimeo.com/': ''}) %}
                                    <div class="ratio ratio-16x9">
                                        <iframe 
                                            src="https://player.vimeo.com/video/{{ videoId }}" 
                                            title="Vimeo video player" 
                                            frameborder="0" 
                                            allow="autoplay; fullscreen; picture-in-picture" 
                                            allowfullscreen>
                                        </iframe>
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle"></i> Video preview not available. Please check the URL format.
                                    </div>
                                    <div class="mb-2">
                                        <a href="{{ partner.videoPath }}" target="_blank" class="btn btn-outline-primary">
                                            <i class="fas fa-external-link-alt"></i> Open video in new tab
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="text-center p-4">
                                <i class="fas fa-video fa-3x text-muted"></i>
                                <p class="mt-2 text-muted">No video available</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 