{% extends 'base.html.twig' %}

{% block title %}Partners List{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <h1 class="h3 mb-4"><i class="fas fa-handshake me-2"></i>Partners List</h1>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Website</th>
                            <th class="text-center" style="min-width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for partner in partners %}
                        <tr>
                            <td>
                                {% if partner.imagePath %}
                                    <img src="{{ asset('uploads/partners/' ~ partner.imagePath) }}" alt="{{ partner.name }}" class="img-thumbnail" style="max-width: 100px;">
                                {% else %}
                                    <img src="{{ asset('images/no-image.png') }}" alt="No image" class="img-thumbnail" style="max-width: 100px;">
                                {% endif %}
                            </td>
                            <td>{{ partner.name }}</td>
                            <td>
                                {% if partner.description %}
                                    {{ partner.description|length > 100 ? partner.description|slice(0, 100) ~ '...' : partner.description }}
                                {% endif %}
                            </td>
                            <td>
                                {% if partner.website %}
                                    <a href="{{ partner.website }}" target="_blank">{{ partner.website }}</a>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="{{ path('app_organizer_partner_view', {'id': partner.id}) }}" class="btn btn-info btn-sm px-3 py-2">
                                        <i class="fas fa-eye me-1"></i> View
                                    </a>
                                    <a href="{{ path('app_organizer_generate_partnership', {'id': partner.id}) }}" class="btn btn-success btn-sm px-3 py-2">
                                        <i class="fas fa-file-contract me-1"></i> Generate
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No partners found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 