{% extends 'base.html.twig' %}

{% block title %}Partner Details{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-primary text-white shadow-lg">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-building me-2"></i>{{ partner.name }}
                    </h1>
                    <a href="{{ path('app_organizer_partners') }}" class="btn btn-light">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            {% if partner.imagePath %}
                                <img src="{{ asset('uploads/partners/' ~ partner.imagePath) }}" alt="{{ partner.name }}" class="img-fluid rounded">
                            {% else %}
                                <img src="{{ asset('images/no-image.png') }}" alt="No image" class="img-fluid rounded">
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h5 class="text-light"><i class="fas fa-info-circle me-2"></i>Description</h5>
                                <p class="text-white">{{ partner.description ?? 'No description available' }}</p>
                            </div>

                            <div class="mb-4">
                                <h5 class="text-light"><i class="fas fa-globe me-2"></i>Website</h5>
                                {% if partner.website %}
                                    <a href="{{ partner.website }}" target="_blank" class="text-white">{{ partner.website }}</a>
                                {% else %}
                                    <p class="text-white">No website available</p>
                                {% endif %}
                            </div>

                            <div class="mb-4">
                                <h5 class="text-light"><i class="fas fa-envelope me-2"></i>Contact Information</h5>
                                <p class="text-white">{{ partner.contactInfo ?? 'No contact information available' }}</p>
                            </div>

                            <div class="mt-4">
                                <a href="{{ path('app_organizer_generate_partnership', {'id': partner.id}) }}" class="btn btn-success">
                                    <i class="fas fa-file-contract me-2"></i>Generate Partnership
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-primary text-white shadow-lg mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-handshake me-2"></i>Partnerships</h5>
                </div>
                <div class="card-body">
                    {% if partnerships is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>No partnerships found for this partner.
                        </div>
                        <a href="{{ path('app_organizer_generate_partnership', {'id': partner.id}) }}" class="btn btn-light">
                            <i class="fas fa-plus-circle me-2"></i> Create New Partnership
                        </a>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover text-white">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Contract Type</th>
                                        <th>Status</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for partnership in partnerships %}
                                        <tr>
                                            <td>{{ partnership.id }}</td>
                                            <td>{{ partnership.contracttype }}</td>
                                            <td>
                                                {% if partnership.isSigned %}
                                                    <span class="badge bg-success">Signed</span>
                                                {% else %}
                                                    <span class="badge bg-warning">Pending</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ partnership.createdAt|date('Y-m-d') }}</td>
                                            <td>
                                                <a href="{{ path('contract_management', {'id': partnership.id}) }}" class="btn btn-sm btn-light">
                                                    <i class="fas fa-file-contract"></i> Manage Contract
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 