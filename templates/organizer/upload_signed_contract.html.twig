{% extends 'organizer/index.html.twig' %}

{% block title %}Téléverser et Vérifier le Contrat Signé{% endblock %}

{% block body %}
    {% block navbar %}
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                Eventura
            </a>
            <form class="search-form" action="/search" method="GET" style="
                display: flex;
                align-items: center;
                background-color: #f8f6fa;
                border: 1px solid #e0e0e0;
                border-radius: 50px;
                padding: 8px 12px;
                width: 600px;
                margin: 20px auto;
                box-sizing: border-box;
            ">
                <i class="fas fa-search" style="color: #55546d; margin: 0 10px;"></i>
                <input 
                    type="search" 
                    name="query" 
                    placeholder="Rechercher des contrats" 
                    style="
                        border: none;
                        outline: none;
                        background: transparent;
                        font-size: 16px;
                        flex: 1;
                        color: #55546d;
                    " 
                />
                <div style="
                    height: 10px;
                    width: 1px;
                    background-color: #ccc;
                    margin: 0 15px;
                "></div>
                <div style="display: flex; align-items: center; color: #55546d; font-size: 16px;">
                    <i class="fas fa-map-marker-alt" style="margin-right: 6px;"></i>
                    <span>Tunis</span>
        </div>
                <button type="submit" style="
                    background-color: #bd4c33;
                    color: white;
                    border: none;
                    border-radius: 50%;
                    width: 30px;
                    height: 30px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin-left: 10px;
                    cursor: pointer;
                ">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-lg-center ms-auto me-lg-5">
                    <!-- Add any additional navbar items here -->
                </ul>

                <div class="d-flex gap-2">
                    {{ include('service/sidebar.html.twig') }}
                </div>
            </div>
        </div>
    </nav>
    {% endblock %}

    {# Main Content #}
    <main>
        <section class="hero-section" id="section_1">
            <div class="section-overlay"></div>

            <div class="container d-flex justify-content-center align-items-center">
                <div class="row">
                    <div class="col-12 mt-auto mb-5 text-center">
                        <h1 class="text-white mb-5">Téléverser et Vérifier le Contrat Signé</h1>
                        <a class="btn custom-btn smoothscroll" href="#section_2">Voir le Formulaire</a>
                    </div>
                    
                    <div class="col-lg-12 col-12 mt-auto d-flex flex-column flex-lg-row text-center">
                        <div class="date-wrap">
                            <h5 class="text-white">
                                <i class="custom-icon bi-clock me-2"></i>
                                Partenaire: {{ partnership.partnerId.name }}
                            </h5>
                        </div>

                        <div class="location-wrap mx-auto py-3 py-lg-0">
                            <h5 class="text-white">
                                <i class="custom-icon bi-geo-alt me-2"></i>
                                Type: {{ partnership.contracttype }}
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="about-section section-padding" id="section_2">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card shadow-lg" style="background-color: #1a2035;">
                            <div class="card-header" style="background-color: #2c2e33; border-bottom: 1px solid #e9ecef;">
                                <h2 class="mb-0 text-white text-center">Formulaire de Téléversement et Vérification</h2>
                </div>
                            <div class="card-body p-4">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                </div>
            {% endfor %}
            
                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                </div>
            {% endfor %}
            
                                <div class="alert alert-info mb-4">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Instructions:</strong> Téléversez le contrat signé au format PDF. Notre système vérifiera automatiquement si le contrat est correctement signé et mettra à jour le statut du partenariat.
        </div>
        
                                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                                    <div class="mb-4">
                                        {{ form_label(form.signedContract, 'Sélectionnez le contrat signé (PDF)', {'label_attr': {'class': 'form-label text-white'}}) }}
                                        {{ form_widget(form.signedContract, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
                                        {{ form_errors(form.signedContract, {'attr': {'class': 'text-danger'}}) }}
                                        <div class="form-text text-white-50 mt-2">
                                            <i class="fas fa-info-circle me-1"></i>Format accepté: PDF uniquement. Taille maximale: 10MB.
                </div>
            </div>
            
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn" style="background-color: #bd4c33; color: white; border: none;">
                                            <i class="fas fa-upload me-2"></i>Téléverser et Vérifier
                            </button>
                                        <a href="{{ path('contract_management', {'id': partnership.id}) }}" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
        </section>
    </main>
{% endblock %} 