{% extends 'base.html.twig' %}

{% block title %}Contract Management - {{ partnership.partnerId.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Contract Management</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <h2>{{ partnership.partnerId.name }}</h2>
                <p class="mb-0">Partnership ID: {{ partnership.id }}</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h3>Partnership Details</h3>
                        <p><strong>Type:</strong> {{ partnership.contracttype }}</p>
                        <p><strong>Status:</strong> 
                            {% if partnership.status == 'signed' %}
                                <span class="badge bg-success">Signed</span>
                                {% if partnership.signedAt %}
                                    <small class="text-muted">(Signed on {{ partnership.signedAt|date('Y-m-d') }})</small>
                                {% endif %}
                            {% else %}
                                <span class="badge bg-warning">Pending Signature</span>
                            {% endif %}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h3>Contract Status</h3>
                        {% if partnership.status == 'signed' %}
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> This contract has been signed and is active.
                            </div>
                        {% else %}
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i> This contract is pending signature.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h3>Contract Document</h3>
            </div>
            <div class="card-body">
                {% if signedContractPath or contractPath %}
                    <div class="mb-3">
                        <a href="{{ path('app_organizer_contract_file', {'type': signedContractPath ? 'signed_contracts' : 'contracts', 'filename': (signedContractPath ?: contractPath)|split('/')|last}) }}" class="btn btn-primary" target="_blank">
                            <i class="fas fa-download"></i> Download Contract
                        </a>
                    </div>
                    
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="{{ path('app_organizer_contract_file', {'type': signedContractPath ? 'signed_contracts' : 'contracts', 'filename': (signedContractPath ?: contractPath)|split('/')|last}) }}" width="100%" height="600px"></iframe>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No contract document available.
                    </div>
                {% endif %}
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h3>Upload Signed Contract</h3>
            </div>
            <div class="card-body">
                {% if partnership.status != 'signed' %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Please upload the signed contract document. The document should be a PDF file with a signature.
                    </div>
                    
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.contractFile) }}
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Upload Contract
                        </button>
                    {{ form_end(form) }}
                {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> A signed contract has already been uploaded for this partnership.
                    </div>
                {% endif %}
            </div>
        </div>
        
        <div class="mt-3">
            <a href="{{ path('app_organizer_partnerships') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Partnerships
            </a>
        </div>
    </div>
{% endblock %} 