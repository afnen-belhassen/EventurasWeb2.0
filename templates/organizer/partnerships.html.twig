{% extends 'base.html.twig' %}

{% block title %}Partnerships{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Partnerships</h1>
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="mb-0">All Partnerships</h2>
                <a href="{{ path('app_organizer_partners') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Partnership
                </a>
            </div>
            <div class="card-body">
                {% if partnerships|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Partner</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for partnership in partnerships %}
                                    <tr>
                                        <td>{{ partnership.id }}</td>
                                        <td>{{ partnership.partnerName }}</td>
                                        <td>{{ partnership.type }}</td>
                                        <td>
                                            {% if partnership.signed %}
                                                <span class="badge bg-success">Signed</span>
                                            {% else %}
                                                <span class="badge bg-warning">Pending</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ partnership.createdAt|date('Y-m-d') }}</td>
                                        <td>
                                            <a href="{{ path('contract_management', {'id': partnership.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-file-contract"></i> Manage Contract
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No partnerships found. Create a new partnership to get started.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 