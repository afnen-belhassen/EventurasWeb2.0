{% extends 'back/basePartner.html.twig' %}

{% block title %}Create Partnership{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Create Partnership</h1>
            <a href="{{ path('app_organizer_partnerships') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.partner, 'Partner', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.partner, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.partner) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.event, 'Event', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.event) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.type, 'Partnership Type', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.type) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.startDate) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.endDate, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endDate) }}
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Partnership
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 