{% extends 'base.html.twig' %}

{% block title %}Organizer Dashboard - Partners{% endblock %}

{% block stylesheets %}
{{parent()}}
<style>
    .rating {
        color: #ffc107;
        font-size: 1.2em;
    }
    .rating-count {
        color: #6c757d;
        font-size: 0.9em;
        margin-left: 5px;
    }
    .star {
        cursor: pointer;
        transition: color 0.2s;
    }
    .star:hover,
    .star.active {
        color: #ffc107;
    }
    .star.inactive {
        color: #ddd;
    }
    .rating-container {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .rating-value {
        font-weight: bold;
        color: #28a745;
    }
</style>
{% endblock %}

{% block body %}
    {% block navbar %}
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                Eventura
            </a>
            <form class="search-form" action="/search" method="GET" style="
                display: flex;
                align-items: center;
                background-color: #f8f6fa;
                border: 1px solid #e0e0e0;
                border-radius: 50px;
                padding: 8px 12px;
                width: 600px;
                margin: 20px auto;
                box-sizing: border-box;
            ">
                <i class="fas fa-search" style="color: #55546d; margin: 0 10px;"></i>
                <input 
                    type="search" 
                    name="query" 
                    placeholder="Rechercher des partenaires" 
                    style="
                        border: none;
                        outline: none;
                        background: transparent;
                        font-size: 16px;
                        flex: 1;
                        color: #55546d;
                    " 
                />
                <div style="
                    height: 10px;
                    width: 1px;
                    background-color: #ccc;
                    margin: 0 15px;
                "></div>
                <div style="display: flex; align-items: center; color: #55546d; font-size: 16px;">
                    <i class="fas fa-map-marker-alt" style="margin-right: 6px;"></i>
                    <span>Tunis</span>
                </div>
                <button type="submit" style="
                    background-color: #bd4c33;
                    color: white;
                    border: none;
                    border-radius: 50%;
                    width: 30px;
                    height: 30px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin-left: 10px;
                    cursor: pointer;
                ">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-lg-center ms-auto me-lg-5">
                    <!-- Add any additional navbar items here -->
                </ul>

                <div class="d-flex gap-2">
                    {{ include('service/sidebar.html.twig') }}
                </div>
            </div>
        </div>
    </nav>
    {% endblock %}

    {# Main Content #}
    <main>
        <section class="about-section section-padding" id="section_2">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-lg" style="background-color: #1a2035;">
                            <div class="card-header" style="background-color: #2c2e33; border-bottom: 1px solid #e9ecef;">
                                <h1 class="mb-0 text-white"><i class="fas fa-handshake me-2"></i>Partenaires</h1>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead style="background-color: #2c2e33;">
                                            <tr>
                                                <th class="text-white">Nom</th>
                                                <th class="text-white">Type</th>
                                                <th class="text-white">Email</th>
                                                <th class="text-white">Téléphone</th>
                                                <th class="text-white">Note</th>
                                                <th class="text-center text-white">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for partner in partners %}
                                                <tr style="color: #ffffff;">
                                                    <td>
                                                        {% if partner.imagePath %}
                                                            <img src="{{ asset(partner.imagePath) }}" alt="{{ partner.name }}" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                        {% else %}
                                                            <i class="fas fa-building me-2"></i>
                                                        {% endif %}
                                                        {{ partner.name }}
                                                    </td>
                                                    <td>{{ partner.type }}</td>
                                                    <td>{{ partner.email }}</td>
                                                    <td>{{ partner.phone }}</td>
                                                    <td>
                                                        <div class="rating-container" data-partner-id="{{ partner.id }}">
                                                            <div class="rating">
                                                                {% for i in 1..5 %}
                                                                    <i class="fas fa-star star {% if partner.rating is not null and i <= partner.rating %}active{% else %}inactive{% endif %}" 
                                                                       data-rating="{{ i }}"
                                                                       title="Cliquez pour noter"></i>
                                                                {% endfor %}
                                                                <span class="rating-count">({{ partner.ratingCount ?: 0 }})</span>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex justify-content-center gap-2">
                                                            <a href="{{ path('app_organizer_partner_show', {'id': partner.id}) }}" class="btn" style="background-color: #00d2ff; color: white; border: none;">
                                                                <i class="fas fa-eye me-1"></i>Voir
                                                            </a>
                                                            <a href="{{ path('app_organizer_create_partnership', {'id': partner.id}) }}" class="btn" style="background-color: #bd4c33; color: white; border: none;">
                                                                <i class="fas fa-handshake me-1"></i>Partenaire
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="6" class="text-center py-4 text-white">
                                                        <i class="fas fa-handshake fa-3x mb-3"></i>
                                                        <p class="mb-0">Aucun partenaire trouvé</p>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="hero-section" id="section_1">
            <div class="section-overlay"></div>

            <div class="container d-flex justify-content-center align-items-center">
                <div class="row">
                    <div class="col-12 mt-auto mb-5 text-center">
                        <h1 class="text-white mb-5">Gestion des Partenariats</h1>
                        <a class="btn custom-btn smoothscroll" href="#section_2">Voir les Partenaires</a>
                    </div>

                    <div class="col-lg-12 col-12 mt-auto d-flex flex-column flex-lg-row text-center">
                        <div class="date-wrap">
                            <h5 class="text-white">
                                <i class="custom-icon bi-clock me-2"></i>
                                24/7 Support
                            </h5>
                        </div>

                        <div class="location-wrap mx-auto py-3 py-lg-0">
                            <h5 class="text-white">
                                <i class="custom-icon bi-geo-alt me-2"></i>
                                Partenaires Globaux
                            </h5>
                        </div>

                        <div class="social-share">
                            <ul class="social-icon d-flex align-items-center justify-content-center">
                                <span class="text-white me-3">Share:</span>
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link"><span class="bi-facebook"></span></a>
                                </li>
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link"><span class="bi-twitter"></span></a>
                                </li>
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link"><span class="bi-instagram"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, initializing star rating...');
    
    // Handle star clicks
    document.querySelectorAll('.star').forEach(star => {
        console.log('Found star element:', star);
        
        star.addEventListener('click', function() {
            console.log('Star clicked!');
            const container = this.closest('.rating-container');
            const partnerId = container.dataset.partnerId;
            const rating = this.dataset.rating;
            
            console.log('Rating data:', {
                partnerId: partnerId,
                rating: rating
            });
            
            // Send rating to server
            fetch(`/organizer/partner/${partnerId}/rate`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `rating=${rating}`
            })
            .then(response => {
                console.log('Server response:', response);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log('Server data:', data);
                if (data.success) {
                    // Update all stars in this container
                    const stars = container.querySelectorAll('.star');
                    stars.forEach((s, index) => {
                        if (index + 1 <= data.newRating) {
                            s.classList.add('active');
                            s.classList.remove('inactive');
                        } else {
                            s.classList.remove('active');
                            s.classList.add('inactive');
                        }
                    });
                    
                    // Update rating count
                    const ratingCount = container.querySelector('.rating-count');
                    ratingCount.textContent = `(${data.newCount})`;
                    
                    console.log('Stars updated successfully');
                } else {
                    console.error('Error:', data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });
});
</script>
{% endblock %} 