{% extends 'base.html.twig' %}

{% block title %}Organizer Dashboard - Partners{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="card bg-primary text-white shadow-lg">
        <div class="card-header">
            <h1 class="mb-0"><i class="fas fa-handshake me-2"></i>Partners</h1>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-white">
                        {% for partner in partners %}
                            <tr>
                                <td>
                                    {% if partner.imagePath %}
                                        <img src="{{ asset(partner.imagePath) }}" alt="{{ partner.name }}" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    {% else %}
                                        <i class="fas fa-building me-2"></i>
                                    {% endif %}
                                    {{ partner.name }}
                                </td>
                                <td>{{ partner.type }}</td>
                                <td>{{ partner.email }}</td>
                                <td>{{ partner.phone }}</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="{{ path('app_organizer_partner_show', {'id': partner.id}) }}" class="btn btn-info">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                        <a href="{{ path('app_organizer_create_partnership', {'id': partner.id}) }}" class="btn btn-success">
                                            <i class="fas fa-handshake me-1"></i>Partner
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="fas fa-handshake fa-3x mb-3"></i>
                                    <p class="mb-0">No partners found</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 