{% extends 'base.html.twig' %}

{% block title %}Partner Details - {{ partner.name }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card bg-primary text-white shadow-lg mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">
                        {% if partner.imagePath %}
                            <img src="{{ asset(partner.imagePath) }}" alt="{{ partner.name }}" class="rounded-circle me-2" style="width: 50px; height: 50px; object-fit: cover;">
                        {% else %}
                            <i class="fas fa-building me-2"></i>
                        {% endif %}
                        {{ partner.name }}
                    </h1>
                    <div class="btn-group">
                        <a href="{{ path('app_organizer_create_partnership', {'id': partner.id}) }}" class="btn btn-success">
                            <i class="fas fa-handshake"></i> Create Partnership
                        </a>
                        <a href="{{ path('app_organizer_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Type:</div>
                        <div class="col-md-8 text-white">{{ partner.type }}</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Description:</div>
                        <div class="col-md-8 text-white">{{ partner.description }}</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Email:</div>
                        <div class="col-md-8 text-white">
                            <a href="mailto:{{ partner.email }}" class="text-white">
                                <i class="fas fa-envelope me-2"></i>{{ partner.email }}
                            </a>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Phone:</div>
                        <div class="col-md-8 text-white">
                            <a href="tel:{{ partner.phone }}" class="text-white">
                                <i class="fas fa-phone me-2"></i>{{ partner.phone }}
                            </a>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Address:</div>
                        <div class="col-md-8 text-white">
                            <i class="fas fa-map-marker-alt me-2"></i>{{ partner.address }}
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 fw-bold text-light">Created At:</div>
                        <div class="col-md-8 text-white">
                            <i class="fas fa-calendar-alt me-2"></i>{{ partner.createdAt|date('Y-m-d H:i:s') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-lg mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-handshake me-2"></i>Partnerships</h5>
                </div>
                <div class="card-body">
                    {% if partner.partnerships|length > 0 %}
                        <div class="list-group">
                            {% for partnership in partner.partnerships %}
                                <a href="{{ path('app_organizer_view_contract', {'id': partnership.id}) }}" class="list-group-item list-group-item-action bg-primary text-white border-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">{{ partnership.contracttype }}</h6>
                                            <small>{{ partnership.description|slice(0, 50) }}...</small>
                                        </div>
                                        <span class="badge bg-{{ partnership.isSigned ? 'success' : 'warning' }}">
                                            {{ partnership.isSigned ? 'Signed' : 'Pending' }}
                                        </span>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-handshake fa-3x mb-3"></i>
                            <p class="mb-0">No partnerships yet</p>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            {% if partner.videoPath %}
                <div class="card bg-primary text-white shadow-lg">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-video me-2"></i>Partner Video</h5>
                    </div>
                    <div class="card-body">
                        {% if 'youtube.com' in partner.videoPath or 'youtu.be' in partner.videoPath %}
                            {% set videoId = partner.videoPath|replace({'https://www.youtube.com/watch?v=': '', 'https://youtu.be/': ''}) %}
                            <div class="ratio ratio-16x9">
                                <iframe 
                                    src="https://www.youtube.com/embed/{{ videoId }}" 
                                    title="YouTube video player" 
                                    frameborder="0" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen>
                                </iframe>
                            </div>
                        {% elseif 'vimeo.com' in partner.videoPath %}
                            {% set videoId = partner.videoPath|replace({'https://vimeo.com/': ''}) %}
                            <div class="ratio ratio-16x9">
                                <iframe 
                                    src="https://player.vimeo.com/video/{{ videoId }}" 
                                    title="Vimeo video player" 
                                    frameborder="0" 
                                    allow="autoplay; fullscreen; picture-in-picture" 
                                    allowfullscreen>
                                </iframe>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Video preview not available. Please check the URL format.
                            </div>
                            <div class="mb-2">
                                <a href="{{ partner.videoPath }}" target="_blank" class="btn btn-outline-light">
                                    <i class="fas fa-external-link-alt"></i> Open video in new tab
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 