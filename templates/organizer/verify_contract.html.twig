{% extends 'base.html.twig' %}

{% block title %}Verify Contract - {{ partnership.partner.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h2>Verify Contract</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h4>Partnership Details</h4>
                            <p><strong>Partner:</strong> {{ partnership.partner.name }}</p>
                            <p><strong>Type:</strong> {{ partnership.type }}</p>
                            <p><strong>Status:</strong> {{ partnership.status }}</p>
                            <p><strong>Start Date:</strong> {{ partnership.startDate|date('Y-m-d') }}</p>
                            <p><strong>End Date:</strong> {{ partnership.endDate|date('Y-m-d') }}</p>
                        </div>

                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="contract" class="form-label">Upload Contract for Verification</label>
                                <input type="file" class="form-control" id="contract" name="contract" accept=".pdf" required>
                                <div class="form-text">Please upload the signed contract in PDF format.</div>
                            </div>
                            <button type="submit" class="btn btn-primary">Verify Contract</button>
                        </form>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success mt-3">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger mt-3">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 